#! /usr/bin/env sh

prefix="$HOME/materiais-vetes/"
IFS=$'\n'
lolo=$(find "$prefix" -type f | sed -E "s|^$prefix||" | fzf -e -i -m +s)
echo "$lolo"
for chosen in "$lolo"; do
    echo "$chosen"
    if [ -n "$chosen" ]; then
        echo "$chosen"
        xdg-open "$prefix/$chosen" >/dev/null 2>&1 &
    fi
done

